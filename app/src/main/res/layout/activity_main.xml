<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_second_activity_explicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Second Activity Explicit Intent" />

    <Button
        android:id="@+id/btn_second_activity_implicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Second Activity Implicit Intent" />

    <Button
        android:id="@+id/btn_view_webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Webpage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:hint="any text you want to share"
            android:text="any text you want to share" />

        <Button
            android:id="@+id/btn_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Text" />
    </LinearLayout>


</LinearLayout>